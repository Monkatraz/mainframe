{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "baseUrl": "./",
    "paths": {
      "@vendor/*": [
        "./public/vendor/*"
      ],
      "@data/*": [
        "./src/static/data/*"
      ],
      "@components": [
        "./src/static/lib/components/index.ts"
      ],
      "@schemas": [
        "./src/static/data/schemas.d.ts"
      ]
      // "cm6-mainframe": [
      //   "./packages/cm6/lib/index.ts"
      // ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./snowpack.config.js",
    "./.eslintrc.js",
    "./src",
    "./packages",
    "dev/types"
  ],
  "exclude": [
    "./node_modules"
  ]
}
