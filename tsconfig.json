{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "baseUrl": "./",
    "paths": {
      "@js/*": [
        "./src/static/js/*"
      ],
      "@modules/*": [
        "./src/static/js/modules/*"
      ],
      "@vendor/*": [
        "./public/vendor/*"
      ],
      "@components/*": [
        "./src/static/components/*"
      ]
    }
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./src",
    "dev/types"
  ],
  "exclude": [
    "./node_modules"
  ]
}