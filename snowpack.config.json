{
  "mount": {
    "src": "/",
    "public": {
      "url": "/",
      "static": true,
      "resolve": false
    }
  },
  "installOptions": {
    "polyfillNode": true,
    "treeshake": true,
    "sourceMaps": true,
    "packageLookupFields": [
      "svelte"
    ]
  },
  "devOptions": {
    "open": "none",
    "output": "stream"
  },
  "buildOptions": {
    "clean": true,
    "metaDir": "static/snowpack",
    "sourceMaps": true
  },
  "alias": {
    "@js": "./src/static/js",
    "@modules": "./src/static/js/modules",
    "@components": "./src/static/components",
    "@vendor": "./public/vendor"
  },
  "experiments": {
    "routes": [
      {
        "src": ".*",
        "dest": "/index.html",
        "match": "routes"
      }
    ],
    "optimize": {
      "bundle": true,
      "minify": true,
      "manifest": true,
      "target": "es2020"
    }
  },
  "plugins": [
    "@snowpack/plugin-dotenv",
    "@snowpack/plugin-svelte",
    "./dev/snowpack/compile-css.js"
  ]
}