{
  "mount": {
    "public": "/",
    "src": "/"
  },
  "installOptions": {
    "polyfillNode": true,
    "installTypes": true,
    "treeshake": true,
    "sourceMaps": false
  },
  "devOptions": {
    "out": "./build/",
    "fallback": "index.pug",
    "open": "none"
  },
  "buildOptions": {
    "clean": true,
    "metaDir": "static/snowpack",
    "sourceMaps": false
  },
  "alias": {
    "@modules": "./src/static/js/modules",
    "@vendor": "./src/vendor"
  },
  "plugins": [
    "@snowpack/plugin-dotenv",
    "./dev/snowpack/compile-css.js",
    "./dev/snowpack/compile-html.js",
    [
      "@snowpack/plugin-optimize",
      {
        "minifyCSS": false,
        "target": "es2018"
      }
    ]
  ]
}