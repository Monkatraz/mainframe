{
  "mount": {
    "src": "/",
    "public": {
      "url": "/",
      "static": true,
      "resolve": false
    }
  },
  "installOptions": {
    "polyfillNode": true,
    "treeshake": true,
    "sourceMaps": true,
    "packageLookupFields": [
      "svelte"
    ]
  },
  "devOptions": {
    "open": "none",
    "output": "stream"
  },
  "buildOptions": {
    "out": "build",
    "clean": true,
    "metaDir": "static/snowpack",
    "sourceMaps": false
  },
  "alias": {
    "@js": "./src/static/js",
    "@modules": "./src/static/js/modules",
    "@components": "./src/static/components",
    "@vendor": "./public/vendor"
  },
  "experiments": {
    "routes": [
      {
        "src": ".*",
        "dest": "/index.html",
        "match": "routes"
      }
    ]
  },
  "plugins": [
    "@snowpack/plugin-svelte",
    "./dev/snowpack/compile-css.js",
    [
      "./dev/snowpack/esbuild-bundle.js",
      {
        "bundle": [
          [
            "static/js/workers/md-renderer.js",
            "static/js/workers/monaco-worker.js",
            "static/js/workers/monaco-worker-json.js",
            "static/js/workers/monaco-worker-css.js",
            "static/js/workers/monaco-worker-html.js",
            "static/js/workers/monaco-worker-ts.js"
          ],
          "static/js/editor/monaco.js",
          "static/js/modules/markdown.js",
          "static/js/modules/anime.js"
        ],
        "preload": true,
        "minify": true
      }
    ]
  ]
}