{
  "mount": {
    "src": "/",
    "public": {
      "url": "/",
      "static": true,
      "resolve": false
    }
  },
  "installOptions": {
    "polyfillNode": true,
    "treeshake": true,
    "sourceMaps": true,
    "packageLookupFields": [
      "svelte"
    ]
  },
  "devOptions": {
    "open": "none",
    "output": "stream"
  },
  "buildOptions": {
    "out": "build",
    "clean": true,
    "metaDir": "static/snowpack",
    "sourceMaps": true
  },
  "alias": {
    "@js": "./src/static/js",
    "@modules": "./src/static/js/modules",
    "@components": "./src/static/components",
    "@vendor": "./public/vendor"
  },
  "experiments": {
    "routes": [
      {
        "src": ".*",
        "dest": "/index.html",
        "match": "routes"
      }
    ]
  },
  "plugins": [
    "@snowpack/plugin-svelte",
    "./dev/snowpack/compile-css.js",
    [
      "./dev/snowpack/esbuild-step.js",
      {
        "entrypoints": [
          "src/static/js/workers/md-renderer.ts"
        ],
        "bundle": true,
        "minify": true
      }
    ],
    [
      "./dev/snowpack/esbuild-step.js",
      {
        "entrypoints": [
          "src/index.html"
        ],
        "preload": true,
        "minify": true
      }
    ]
  ]
}