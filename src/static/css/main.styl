@charset 'UTF-8'

// Library and Variables
@require '_lib'
// Modules
@require 'noncritical/*'

// Misc.

// Meaningful HTML Tags
// TODO: add black box <del> tag
// TODO: add ins green underline or something of the sort
// TODO: add <u> tag

mark
  background: colvar('highlight')
  color: colvar('black')
  label-for-screenreaders('highlighted text')
s
  label-for-screenreaders('stricken text')
ins
  label-for-screenreaders('newly inserted text')

// Scrollbars
// Style only when using a mouse (prefer default mobile scrollbars)
+has-only-hover()
  html
    scrollbar-width: thin

  // This webkit scrollbar matches Firefox's thin scrollbar fairly closely
  // Track
  ::-webkit-scrollbar
    width: 10px
  
  // Handle
  ::-webkit-scrollbar-thumb
      box-shadow: inset 0 0 10px 10px rgba(120, 120, 120, 0.35)
      border: 2px solid transparent
      border-radius: 5px

  ::-webkit-scrollbar-thumb:hover
    box-shadow: inset 0 0 10px 10px rgba(120, 120, 120, 0.5)

  ::-webkit-scrollbar-thumb:active
    box-shadow: inset 0 0 10px 10px rgba(80, 80, 80, 0.5)

  // Horizontal Handle
  ::-webkit-scrollbar-thumb:horizontal
      border: 5px solid transparent
      border-radius: 10px