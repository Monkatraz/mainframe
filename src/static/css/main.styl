@charset 'UTF-8'
@import '_reset'

@require '_lib'
@require '_theme'

@require 'layout/*'
@require 'typography/*'

html, body
  min-width: 100%
  max-width: 100%
  min-height: 100%
  font-size: 1rem
  line-height: 1.5
  touch-action: manipulation
  scroll-behavior: smooth

#toasts, #modals
  position: fixed
  bottom: 0
  left: 0
  z-index: 99
  width: 100%
