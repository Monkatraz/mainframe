@charset 'UTF-8'
@import '_reset'

@require '_lib'
@require '_colors'

@require 'layout/*'
@require 'typography/*'

// Boilerplate

html, body
  scroll-behavior: smooth
  touch-action: manipulation
  font-size: 1rem  // Used for consistent sizing (shouldn't be messed with)
  line-height: 1.5 // Should also not be messed with

body
  $head-h = var(--layout-header-height)
  $foot-h = var(--layout-footer-height)
  width: 100%
  max-width: 100%
  min-height: 'calc(100vh + %s)' % $foot-h // Footer requires scrolling

  // Stylus bug makes the multi-line thing break so this is just a work-around
  grid-kiss:"+---------+         ","| #header | $head-h ","+---------+         ","+---------+         ","| #app    | auto    ","+---------+         ","+---------+         ","| #footer | $foot-h ","+---------+         "
