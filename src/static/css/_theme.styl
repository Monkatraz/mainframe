@require '_lib'

// -- Global Colors

:root
  // Monochrome Colors
  colvar-set('white',      rgb(245, 245, 245))
  colvar-set('lightgray',  rgb(185, 185, 185))
  colvar-set('gray',       rgb(60, 50, 55))
  colvar-set('black',      rgb(20, 20, 20))

  // Accent Colors
  colvar-set('accent-1', rgb(135, 0, 5))
  colvar-set('accent-2', rgb(30, 120, 210))

  // Hints
  colvar-set('hint', rgb(50, 150, 255))

  // Contextual Colors
  colvar-set('success', rgb(30, 180, 65))
  colvar-set('danger',  rgb(180, 45, 10))
  colvar-set('warning', rgb(240, 125, 0))
  colvar-set('info',    rgb(20, 125, 205))

  // Misc Colors
  colvar-set('text-highlight', rgb(255,255,0))
  colvar-set('text-select',    rgba(50, 150, 255, 0.25))
  colvar-set('link-ext',       rgb(50, 150, 255))
  colvar-set('link-int',       rgb(180, 0, 20))

  // Critical Colors
  colvar-set('critic-inserted',    rgb(50, 255, 65))
  colvar-set('critic-deleted',     rgb(255, 50, 20))
  colvar-set('critic-sub-arrow',   rgb(255, 150, 20))
  colvar-set('critic-highlighted', rgb(200, 120, 200))
  colvar-set('critic-comment',     rgb(50, 150, 255))

// -- Light / Dark Colors

.light
  colvar-set('text',        rgb(30, 25, 25))
  colvar-set('text-subtle', rgb(55, 55, 60))
  colvar-set('text-dim',    rgb(120, 120, 125))
  colvar-set('background',  rgb(245, 245, 245))
  colvar-set('border',      rgb(220, 220, 220))

  // Contrasting (opposite) colors
  colvar-set('con-text',        rgb(235, 225, 230))
  colvar-set('con-text-subtle', rgb(205, 200, 200))
  colvar-set('con-text-dim',    rgb(190, 185, 185))
  colvar-set('con-background',  rgb(43, 43, 50))
  colvar-set('con-border',      rgb(65, 65, 75))

  color: colvar('text')
  background: colvar('background')

.dark
  colvar-set('text',        rgb(235, 225, 230))
  colvar-set('text-subtle', rgb(205, 200, 200))
  colvar-set('text-dim',    rgb(190, 185, 185))
  colvar-set('background',  rgb(43, 43, 50))
  colvar-set('border',      rgb(65, 65, 75))

  // Contrasting (opposite) colors
  colvar-set('con-text',        rgb(30, 25, 25))
  colvar-set('con-text-subtle', rgb(55, 55, 60))
  colvar-set('con-text-dim',    rgb(120, 120, 125))
  colvar-set('con-background',  rgb(245, 245, 245))
  colvar-set('con-border',      rgb(220, 220, 220))

  color: colvar('text')
  background: colvar('background')

