#logo_emblem
  filter: drop-shadow(0 0 10px rgba(black, 0.5))

#header_logo
  z-index: 1
  color: white
  filter: none
  transition: filter 0.1s

  +on-hovertouch()
    filter: drop-shadow(0 0 5px white)

  // Simple click effect
  &:active
    filter: brightness(80%)
    transition: filter 0s

#logo_title
  margin: 0
  padding: 0
  terminal-text()
  white-space: nowrap
  word-spacing: -0.25rem
  font-size: 3rem
  line-height: @font-size - 1rem
  font-family: 'Title Font', var(--font-mono)
  font-weight: 400

  +match-media(narrow, only)
    font-size: 2.5rem

#logo_slogan
  white-space: nowrap
  letter-spacing: 1px
  font-weight: bold
  font-size: 1rem
  // Slight padding if we're not using the centered view
  +match-media(thin, up)
    padding-left: 0.25rem

// Small displays
+match-media(thin, below)
  #logo_emblem
    opacity: 0.35
    filter: drop-shadow(0 0 3px white)

  #logo_slogan
    text-shadow: 0 1px 3px black

  #logo_title, #logo_slogan
    filter: drop-shadow(0 0 4px rgba(0,0,0,0.5))