@require '_lib'

.in-edit, html:not(.loaded)
  #footer
    display: none

#footer
  min-height: var(--layout-footer-height)
  line-height: 1.25
  padding: 0.25rem 0
  background: colvar('background')
  color: colvar('text-subtle')
  font-set('display')
  font-size: 1rem
  font-weight: 400

#footer_list
  display: flex
  min-height: var(--layout-footer-height)
  align-items: center
  margin: 0
  padding: 0
  list-style: none

  > li
    margin: 0
    margin-left: 1rem
    padding: 0

  +match-media(thin, below)
    flex-direction: column
    > li
      margin: 0 0.5rem
      text-align: center

#footer_license
  font-size: 0.75rem
  font-set('sans')

#footer_pb
  white-space: nowrap

#footer_pbmf
  color: colvar('text')
  font-family: 'Title Font', var(--font-mono)