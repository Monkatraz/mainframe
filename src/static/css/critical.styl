@charset 'UTF-8'
@import 'sanitize.css'
// Reset
html
  cursor: auto
input
  font: inherit

@require '_lib'
@require '_colors'

// Components
@require 'critical/*'

// Boilerplate
html
  background: colvar('background-light')
  overflow: hidden

body
  overflow-x: hidden
  overflow-y: auto
  min-width: 100vw
  min-height: 100vh
  max-width: 100vw
  max-height: 100vh

@keyframes pageload-fadein
  0%
    opacity: 1
    visibility: visible
  90%
    opacity: 0
    visibility: visible
  100%
    visibility: hidden

#app
  color: colvar('text-dark')

  // Page load fade in
  &::after
    content: ""
    z-index: 70
    grid-column: 1 / 5
    grid-row: 3 / 5
    background: colvar('background-light')
    background-image: url('/static/media/spinner.svg')
    background-repeat: no-repeat
    background-position: 50% 25vh
    background-size: 250px

  /.page-loaded &::after
    animation: pageload-fadein 0.25s 1 backwards
    opacity: 0
    visibility: hidden