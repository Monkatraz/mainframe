@charset 'UTF-8'
@import 'sanitize.css'
// Reset
html
  cursor: auto
input
  font: inherit

@require '_lib'
@require '_colors'

// Components
@require 'critical/*'

// Boilerplate

html
  width: 100vw
  max-width: 100vw
  height: 100vh
  max-height: 100vh

body
  background: colvar('background-light')
  width: 100vw
  max-width: 100vw
  height: 100%

// Scroll madness
html, body
  overflow-x: hidden
  overflow-y: scroll
  scroll-behavior: smooth
  touch-action: manipulation

html, body
  font-size: 1rem  // Used for consistent sizing (shouldn't be messed with)
  line-height: 1.5 // Should also not be messed with

#app
  color: colvar('text-dark')

// Scrollbars
// Style only when using a mouse (prefer default mobile scrollbars)
+has-only-hover()
  html
    scrollbar-width: thin

  // This webkit scrollbar matches Firefox's thin scrollbar fairly closely
  // Track
  ::-webkit-scrollbar
    width: 10px
  
  // Handle
  ::-webkit-scrollbar-thumb
      box-shadow: inset 0 0 10px 10px rgba(120, 120, 120, 0.35)
      border: 2px solid transparent
      border-radius: 5px

  ::-webkit-scrollbar-thumb:hover
    box-shadow: inset 0 0 10px 10px rgba(120, 120, 120, 0.5)

  ::-webkit-scrollbar-thumb:active
    box-shadow: inset 0 0 10px 10px rgba(80, 80, 80, 0.5)

  // Horizontal Handle
  ::-webkit-scrollbar-thumb:horizontal
      border: 5px solid transparent
      border-radius: 10px