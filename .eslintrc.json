{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "overrides": [
    /* JavaScript (Node) */
    {
      "files": [
        "*.js"
      ],
      "env": {
        "node": true
      },
      "rules": {
        "no-unused-vars": "off"
      }
    },
    /* TypeScript (Browser) */
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "extends": "plugin:@typescript-eslint/recommended",
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        /* I consent that I am fully aware of the stupid type mangling I am commiting. /s */
        /* Additionally, I dislike having to type things that already have a strong implicit type. */
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/ban-types": "off",
        "@typescript-eslint/explicit-module-boundary-types": "off",
        /* I just find this lint error annoying. */
        "@typescript-eslint/no-unused-vars": "off"
      }
    }
  ]
}