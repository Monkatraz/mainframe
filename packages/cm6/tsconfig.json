{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowJs": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM",
      "WebWorker"
    ],
    "baseUrl": "./",
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": [
    "./lib/index.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
